let g:mapleader = "\<Space>"

nnoremap <Leader>w :w<CR>
nnoremap <silent> <Esc><Esc> :nohlsearch<CR>

set encoding=utf-8
set belloff=all
set backspace=2
set smartindent autoindent 
set incsearch 
set ignorecase
set smartcase 
set hlsearch
set cursorline
set virtualedit=block
set showtabline=2
set noswapfile
set nobackup
nnoremap j gj
nnoremap k gk
noremap H ^
noremap L g_

